<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_background"
    android:orientation="horizontal"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="4dp"
    android:paddingTop="4dp"  >
	
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/post_shadow"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingRight="2dp" >
	        
	    <LinearLayout
	        xmlns:android="http://schemas.android.com/apk/res/android"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/post_shape"
	        android:orientation="horizontal"
	        android:paddingRight="8dp"
	        android:paddingTop="8dp"
	        android:paddingBottom="8dp" >
	
	        <TextView
	            android:id="@+id/row_id"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:visibility="gone" />
	
	        <ImageView
	            android:id="@+id/ic_pin"
	            android:layout_width="48dp"
	            android:layout_height="48dp"
	            android:layout_gravity="center_vertical"
	            android:layout_marginLeft="5dp"
	            android:contentDescription="@string/ic_pin"
	            android:src="@drawable/ic_pin" >
	        </ImageView>
	
	        <LinearLayout
	            xmlns:android="http://schemas.android.com/apk/res/android"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical" >
	
	            <TextView
	                android:id="@+id/row_message"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="5dp"
	                android:textSize="20sp" />
	
	            <LinearLayout
	                xmlns:android="http://schemas.android.com/apk/res/android"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal" >
	
	                <TextView
	                    android:id="@+id/row_username"
	                    android:layout_width="0dp"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="5dp"
	                    android:layout_weight="1"
	                    android:textColor="#AFAFAF"
	                    android:textSize="18sp" />
	
	                <TextView
	                    android:id="@+id/row_latitude"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textColor="#AFAFAF" />
	
	                <TextView
	                    android:id="@+id/row_longitude"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="5dp"
	                    android:layout_marginRight="5dp"
	                    android:textColor="#AFAFAF" />
	            </LinearLayout>
	        </LinearLayout>
    	</LinearLayout>
    </LinearLayout>

</LinearLayout>